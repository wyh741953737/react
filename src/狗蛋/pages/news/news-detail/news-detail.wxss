/* pages/index/news-detail/news-detail.wxss */
.news-detail-container{
  display: flex;
  flex-direction: column;
}
.head-img{
  width: 100%;

}
.author-time{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.author-avator{
  height: 64rpx;
  width: 64rpx;
  border-radius: 64rpx;
  vertical-align: middle;
}
.time{
  margin-left: 20rpx;
vertical-align: middle;
margin-bottom: 5px;
font-size: 26rpx;
}
.author-name{
  font-size: 30rpx;
  font-weight: 700;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  margin-left: 40rpx;
  font-size: 34rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: red;
}
.tool{
  margin-top: 5px;

}
.detail{
  font-size: 28rpx;
  margin-top: 14rpx;
  width: 96%;
  margin-left: 2%;
  text-indent: 0.8rem;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width:50rpx;
  height: 50rpx;
}
.share-img{
  margin-left: 30rpx;
}
.horizon{
  width: 670rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top:60rpx;
  margin: 0 auto;
  z-index: -99;
}
.playermusic{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-left: 40rpx;
}


.comment{
  padding: 20rpx;
  margin-top: 20rpx;
}
.recomment-wrap{
  height: 800rpx;
  border: 1px solid red;
  
}